<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Log In"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="to your account"
        android:textColor="#666"
        android:textSize="14sp" />

    <!-- Phone number label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="#555"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:backgroundTint="#AAA"
        android:hint="+88XXXXXXXXXXX"
        android:inputType="phone"
        android:paddingBottom="8dp"
        android:singleLine="true"
        android:textColor="#000" />

    <!-- OTP field (hidden until OTP sent) -->
    <TextView
        android:id="@+id/lblOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        android:textColor="#555"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/edtPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="#AAA"
        android:hint="Enter OTP"
        android:inputType="number"
        android:paddingBottom="8dp"
        android:singleLine="true"
        android:textColor="#000"
        android:visibility="gone" />

    <!-- Resend text -->
    <TextView
        android:id="@+id/txtResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didnâ€™t get the OTP? Resend"
        android:textColor="#e62e04"
        android:textSize="13sp"
        android:visibility="gone"
        android:layout_marginTop="4dp" />

    <!-- Button -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#e62e04"
        android:fontFamily="sans-serif-medium"
        android:text="Send OTP"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <!-- Custom Keypad -->
    <include layout="@layout/custom_keypad" />

</LinearLayout>
