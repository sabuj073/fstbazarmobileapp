<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 🔹 Ultra Compact Curved Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/curve_bg"
        android:paddingHorizontal="20dp"
        android:paddingTop="15dp"> <!-- ⬅️ Reduced from 35dp to 15dp -->

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="false"
            android:layout_marginTop="25dp"
            android:background="@drawable/profile_circle_bg" />

        <!-- Name + Tap for Balance -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/imgProfile"
            android:layout_marginStart="12dp"
            android:layout_marginTop="25dp"
            android:layout_centerVertical="false">

            <TextView
                android:id="@+id/txtUserName"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp" />

            <TextView
                android:id="@+id/txtTapForBalance"
                android:text="Tap for Balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e62e04"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@drawable/balance_chip_bg"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 🔹 Icon Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:paddingHorizontal="8dp" />

    <!-- 🔹 Banner Slider -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/bannerViewPager"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />
</LinearLayout>
